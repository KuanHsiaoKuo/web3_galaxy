{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "An example of a space-fulling radial layout for hierarchical data.",
  "width": 1200,
  "height": 1200,
  "padding": 200,
  "autosize": "none",
  "data": [
    {
      "name": "tree",
      "url": "vega/web3_galaxy.json",
      "transform": [
        {
          "type": "stratify",
          "key": "id",
          "parentKey": "parent"
        },
        {
          "type": "partition",
          "field": "node_angle",
          "sort": {
            "field": "value"
          },
          "size": [
            {
              "signal": "2 * PI"
            },
            {
              "signal": "width / 2"
            }
          ],
          "as": [
            "a0",
            "r0",
            "a1",
            "r1",
            "depth",
            "children"
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "tree",
        "field": "depth"
      },
      "range": {
        "scheme": "tableau20"
      }
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "tree"
      },
      "encode": {
        "enter": {
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          },
          "fill": {
            "scale": "color",
            "field": "depth"
          },
          "tooltip": {
            "signal": "datum.node_angle + ' ' + datum.name + (datum.link ? ' üîó ' : '') + 'ÂåÖÂê´ ' + (datum.node_count ? ', ' + datum.node_count + ' ‰∏™ËäÇÁÇπ' : '')"
          },
          "href": {
            "signal": "datum.link"
          }
        },
        "update": {
          "startAngle": {
            "field": "a0"
          },
          "endAngle": {
            "field": "a1"
          },
          "innerRadius": {
            "field": "r0"
          },
          "outerRadius": {
            "field": "r1"
          },
          "stroke": {
            "value": "white"
          },
          "strokeWidth": {
            "value": 0.5
          },
          "zindex": {
            "value": 0
          }
        },
        "hover": {
          "stroke": {
            "signal": "datum.link ? 'blue' : 'red'"
          },
          "strokeWidth": {
            "value": 2
          },
          "zindex": {
            "value": 1
          }
        }
      }
    }
  ]
}
